{
  "name": "mono-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Mono API with both local and remote transport support",
  "main": "src/index.ts",
  "scripts": {
    "start:stdio": "node dist/index.js stdio",
    "start:http": "node dist/index.js http 3000",
    "build": "tsc",
    "dev:stdio": "nodemon src/index.ts stdio",
    "dev:http": "nodemon src/index.ts http 3000",
    "dev:inspect": "set DANGEROUSLY_OMIT_AUTH=true && npx @modelcontextprotocol/inspector ts-node src/index.ts stdio"

  },
  "keywords": [
    "mono",
    "mono-mcp-server"
  ],
  "author": "Joseph Anya",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
